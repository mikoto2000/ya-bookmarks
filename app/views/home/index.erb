<div style="display: flex;flex-direction: column;height: 100vh;">

  <header class="main-content-header">
    <p style="color: green"><%= notice %></p>
  </header>

  <main>
    <div>
      <%= form_with(url: add_my_bookmark_path, method: :post, html: { class: %w[form-control form-control-sm] }) do |form| -%>
        <%- if @new_page.errors.any? -%>
          <div style="color: red">
            <h2><%= t("errors.template.header", model: Page.model_name.human, count: @new_page.errors.count) %></h2>

            <ul>
              <% @new_page.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <%- end -%>
            </ul>
          </div>
        <%- end -%>

        <%- if @new_page.persisted? -%>
          <div>
            <%= form.label :id, style: "display: block" %>
            <div class="ps-2">
              <%= form.number_field :id, class: %w[form-control form-control-sm], disabled: true %>
            </div>
          </div>
        <%- end -%>
        <div>
          <%= form.label :display_name, style: "display: block" %>
          <div class="ps-2">
            <%= form.text_field :url, class: %w[form-control form-control-sm] %>
          </div>
        </div>
        <div>
          <%= form.submit class: %w[btn btn-primary] %>
        </div>
      <% end %>

    </div>
    <ol id="bookmarks">
        <%= render partial: "page", collection: @pages %>
    </ol>
  </main>
</div>

