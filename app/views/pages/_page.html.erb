<div id="<%= dom_id page %>">
  <table class="table table-hover">
    <tr>
      <td>
        <strong>Id:</strong>
      </td>
      <td>
        <%= page.id %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Page.human_attribute_name(:url) %>
        </strong>
      </td>
      <td>
        <%= page.url %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Page.human_attribute_name(:created_at) %>
        </strong>
      </td>
      <td>
        <%= page.created_at && l(page.created_at) %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Page.human_attribute_name(:updated_at) %>
        </strong>
      </td>
      <td>
        <%= page.updated_at && l(page.updated_at) %>
      </td>
    </tr>
  </table>
</div>
